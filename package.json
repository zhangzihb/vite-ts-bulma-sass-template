{
  "name": "vite-ts-bulma-sass-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "22.17.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "format": "biome format --write src/ *.ts *.json",
    "lint": "biome lint --write src/ *.ts *.json",
    "check": "biome check --write src/ *.ts *.json",
    "biome:ci": "biome ci src/ *.ts *.json",
    "stylelint": "stylelint --fix 'src/**/*.scss'",
    "stylelint:ci": "stylelint 'src/**/*.scss'",
    "set-nodebrew": "nodebrew install $(cat .node-version); nodebrew use $(cat .node-version)",
    "set-nvm": "nvm install $(cat .node-version); nvm use $(cat .node-version)"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/estree": "^1.0.8",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "sass": "^1.89.2",
    "stylelint": "^16.22.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vue-tsc": "^3.0.4"
  },
  "dependencies": {
    "bulma": "^1.0.2",
    "codeplayer2": "^1.1.2",
    "vue": "^3.5.18"
  }
}
